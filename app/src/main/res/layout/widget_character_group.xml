<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view_character"
    android:layout_width="@dimen/widget_two_cell_height"
    android:layout_height="@dimen/widget_two_cell_height"
    android:background="@drawable/widget_bg">

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.7" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="14dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="14dp"
        android:layout_marginBottom="58dp"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="启动筑梦岛以获取数据"
        android:textColor="#FFFFFF"
        android:textSize="14dp" />

    <ImageView
        android:id="@+id/iv_group_member"
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_group_avatar_size"
        android:scaleType="fitStart"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="14dp"
        android:layout_marginBottom="14dp" />

</RelativeLayout>