<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="155dp"
    android:background="@drawable/widget_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:paddingHorizontal="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginEnd="36dp"
            android:text="跟梦中人聊聊"
            android:textSize="14dp"
            android:textColor="#FFFFFF" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_launcher" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="113dp"
        android:paddingHorizontal="16dp"
        android:gravity="center_vertical"
        android:background="@drawable/widget_multi_bottom_bg"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="64dp"
            android:layout_height="86dp">

            <ImageView
                android:id="@+id/iv_character_first"
                android:layout_width="64dp"
                android:layout_height="86dp"
                android:scaleType="centerCrop"
                android:alpha="0.7"
                android:background="@drawable/widget_default" />

            <TextView
                android:id="@+id/tv_character_first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="6dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="6dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#FFFFFF"
                android:textSize="10dp"
                tools:text="须梦如一须梦如一须梦如一须梦如一" />

        </RelativeLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <RelativeLayout
            android:layout_width="64dp"
            android:layout_height="86dp">

            <ImageView
                android:id="@+id/iv_character_second"
                android:layout_width="64dp"
                android:layout_height="86dp"
                android:scaleType="centerCrop"
                android:alpha="0.7"
                android:background="@drawable/widget_default" />

            <TextView
                android:id="@+id/tv_character_second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="6dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="6dp"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="须梦如一须梦如一须梦如一须梦如一"
                android:textColor="#FFFFFF"
                android:textSize="10dp" />

        </RelativeLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <RelativeLayout
            android:layout_width="64dp"
            android:layout_height="86dp">

            <ImageView
                android:id="@+id/iv_character_third"
                android:layout_width="64dp"
                android:layout_height="86dp"
                android:scaleType="centerCrop"
                android:alpha="0.7"
                android:background="@drawable/widget_default" />

            <TextView
                android:id="@+id/tv_character_third"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="6dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="6dp"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="须梦如一须梦如一须梦如一须梦如一"
                android:textColor="#FFFFFF"
                android:textSize="10dp" />

        </RelativeLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <RelativeLayout
            android:layout_width="64dp"
            android:layout_height="86dp">

            <ImageView
                android:id="@+id/iv_character_fourth"
                android:layout_width="64dp"
                android:layout_height="86dp"
                android:scaleType="centerCrop"
                android:alpha="0.7"
                android:background="@drawable/widget_default" />

            <TextView
                android:id="@+id/tv_character_fourth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="6dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="6dp"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="须梦如一须梦如一须梦如一须梦如一"
                android:textColor="#FFFFFF"
                android:textSize="10dp" />

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>