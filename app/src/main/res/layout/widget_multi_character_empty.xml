<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="155dp"
    android:background="@drawable/widget_empty_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:paddingHorizontal="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:background="@drawable/widget_empty_piece_bg" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="启动筑梦岛以获取数据"
            android:textColor="#99FFFFFF"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:background="@drawable/widget_multi_bottom_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_character_first"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/widget_empty_piece_bg" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/iv_character_second"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/widget_empty_piece_bg" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/iv_character_third"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/widget_empty_piece_bg" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/iv_character_fourth"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/widget_empty_piece_bg" />

    </LinearLayout>
</LinearLayout>