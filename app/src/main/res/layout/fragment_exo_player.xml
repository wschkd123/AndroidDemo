<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_bg">

    <TextView
        android:id="@+id/tv_play_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IDLE"
        android:textColor="@color/colorAccent"
        android:textSize="38dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_play_stream1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="play mock stream"
            android:textColor="@color/colorAccent"
            android:textSize="38dp" />

        <TextView
            android:id="@+id/tv_play_stream2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="play chunk"
            android:textColor="@color/colorAccent"
            android:textSize="38dp" />

        <TextView
            android:id="@+id/tv_clean_cache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="clean cache"
            android:textColor="@color/colorAccent"
            android:textSize="38dp" />

        <TextView
            android:id="@+id/tv_play_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="play local"
            android:textColor="@color/colorAccent"
            android:textSize="38dp" />


        <TextView
            android:id="@+id/tv_play_net"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="play url"
            android:textColor="@color/colorAccent"
            android:textSize="38dp" />

        <TextView
            android:id="@+id/tv_down_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="down url"
            android:textColor="@color/colorAccent"
            android:textSize="38dp" />
    </LinearLayout>

</FrameLayout>
